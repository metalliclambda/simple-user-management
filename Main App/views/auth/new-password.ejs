<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="../css/styles.css">
<link rel="stylesheet" href="./css/login.css">


</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    
    <div class="body">
        <h1>User Chane Password :</h1>    
        <div class="login">
            <form action="/new-password" method="post">
                <div>
                    <label for="oldPassword">Old Password</label>
                    <input type="password" name="oldPassword" id="oldPassword" autofocus=true>
                </div>
                <div>
                    <label for="newPassword">New Password</label>
                    <input type="password" name="newPassword" id="newPassword">
                </div>
                <div>
                    <label for="confirm-newPassword">Confirm New Password</label>
                    <input type="password" name="confirmNewPassword" id="confirm-newPassword">
                </div>
                <div class="submit-button">
                    <button type="submit">Change</button>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form> 
            <% if(errorMessage){ %>
                <div class="user-msg <%= isError ? 'user-msg--error' : '' %>">
                    <p><%= errorMessage %></p>                       
                </div>     
            <% } %> 
            
        </div>  
        

    </div>
    
    <%- include('../includes/footer.ejs') %>
    